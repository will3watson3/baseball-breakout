# === Imports ===
import pandas as pd
import numpy as np
import joblib, json
from pathlib import Path

# === Define Base Paths ===
base_dir = Path("/Users/willwatson/baseball-breakout")
ARTIFACT_DIR = base_dir / "artifacts"

xgb_path = ARTIFACT_DIR / "xgb_model.pkl"
feat_path = ARTIFACT_DIR / "feature_list.json"
med_path  = ARTIFACT_DIR / "training_feature_stats.json"

# === Load Model ===
assert xgb_path.exists(), f"‚ùå Missing model: {xgb_path}"
xgb_model = joblib.load(xgb_path)
print(f"‚úÖ Loaded model: {xgb_path.name}")

# === Load Feature Schema ===
with open(feat_path, "r") as f:
    FEATURE_LIST = json.load(f)

# === Load Training Medians (optional) ===
MEDIANS = {}
if med_path.exists():
    with open(med_path, "r") as f:
        MEDIANS = json.load(f).get("medians", {})
print(f"‚úÖ Features loaded: {len(FEATURE_LIST)} | Medians loaded: {bool(MEDIANS)}")



# === Load Statcast Data ===
data_dir = base_dir / "data" / "Raw"
df24 = pd.read_csv(data_dir / "savant_2024.csv")
df25 = pd.read_csv(data_dir / "savant_2025.csv")

# Normalize columns
for d in [df24, df25]:
    d.columns = [c.strip().lower() for c in d.columns]

# === Compute Year-over-Year Deltas ===
cols = [
    "pa", "attack_angle", "barrels_per_bbe_percent", "bat_speed",
    "hardhit_percent", "k_percent", "bb_percent", "launch_speed",
    "rate_ideal_attack_angle", "swing_miss_percent"
]

common = [c for c in cols if c in df24.columns and c in df25.columns]
merged = pd.merge(df25, df24, on="player_id", suffixes=("_2025", "_2024"))

for c in common:
    merged[f"{c}_delta"] = merged[f"{c}_2025"] - merged[f"{c}_2024"]

merged["pa"] = merged["pa_2025"]

# Preserve player name for final output
name_cols = [c for c in merged.columns if "player_name" in c]
merged["player_name"] = merged[name_cols[0]] if name_cols else merged["player_id"]

print(f"‚úÖ Merged {len(merged)} players | Delta features computed: {len(common)}")



# === Build X_2025 Feature Frame ===
X_2025 = pd.DataFrame(index=merged.index)

for f in FEATURE_LIST:
    if f in merged.columns:
        X_2025[f] = merged[f]
    else:
        X_2025[f] = MEDIANS.get(f, 0)

# Convert numeric dtypes
X_2025 = X_2025.apply(pd.to_numeric, errors="coerce").fillna(0)

print(f"‚úÖ Feature frame built: {X_2025.shape}")
print(f"Missing features filled with medians: {sum(f not in merged.columns for f in FEATURE_LIST)}")




# === Guarantee player_id is included, numeric, and ordered ===
if "player_id" not in X_2025.columns and "player_id" in merged.columns:
    X_2025["player_id"] = merged["player_id"]

# Convert player_id to numeric
X_2025["player_id"] = pd.to_numeric(X_2025["player_id"], errors="coerce").fillna(0).astype(int)

# Drop text-only columns
if "player_name" in X_2025.columns:
    X_2025 = X_2025.drop(columns=["player_name"])

# Align columns with trained model's expected order
trained_features = xgb_model.get_booster().feature_names or FEATURE_LIST
X_2025 = X_2025.reindex(columns=trained_features, fill_value=0)

print("‚úÖ Final X_2025 ready for prediction.")
print(f"Features aligned: {len(X_2025.columns)} | Model expects: {len(trained_features)}")




# === Predict breakout probabilities ===
probs = xgb_model.predict_proba(X_2025)[:, 1]
merged["breakout_prob_2026"] = probs

# === Create Ranked Output ===
ranked = merged[["player_id", "player_name", "breakout_prob_2026"]].copy()
ranked = ranked.sort_values("breakout_prob_2026", ascending=False).reset_index(drop=True)
ranked["rank"] = np.arange(1, len(ranked) + 1)

print("‚úÖ Predictions complete.")
display(ranked.head(20))




# === Save 2026 Predictions ===
output_dir = base_dir / "outputs"
output_dir.mkdir(parents=True, exist_ok=True)

OUTFILE = output_dir / "breakout_predictions_2026.csv"
ranked.to_csv(OUTFILE, index=False)

print(f"‚úÖ Saved predictions to {OUTFILE}")
print(f"üìä Total players ranked: {len(ranked)}")



# === Visualize Top 20 Players ===
ranked.head(20).style.background_gradient(
    subset=["breakout_prob_2026"], cmap="YlOrRd"
)



# === Diagnostic: Compare feature alignment ===
booster_features = xgb_model.get_booster().feature_names
missing = set(booster_features) - set(X_2025.columns)
extra = set(X_2025.columns) - set(booster_features)

print("üß† Model feature check:")
print(f"  ‚Ä¢ Expected: {len(booster_features)}")
print(f"  ‚Ä¢ Provided: {len(X_2025.columns)}")
print(f"  ‚Ä¢ Missing: {len(missing)} | Extra: {len(extra)}")

if missing:
    print("  ‚ùó Missing features:", list(missing))




